<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rosen.luckywheel.MainActivity"
    android:id="@+id/relativeMainWrapper">

    <Button
        android:id="@+id/btnNewGame"
        android:text="New Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:textColor="#D0D4BC"
        android:layout_marginBottom="10dp"/>
    <Button
        android:id="@+id/btnLoadGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Game"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnNewGame"/>
    <EditText
        android:id="@+id/etPlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end" android:singleLine="true"
        android:hint="your name"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnLoadGame"/>
    <Button
        android:id="@+id/btnStartGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:textColor="#D0D4BC"
        android:text="Start Game"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etPlayerName"/>
    <Space
        android:id="@+id/spaceContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>
